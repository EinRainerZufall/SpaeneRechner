    <defaultLanguage>de</defaultLanguage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>SpaeneRechner</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>SpaeneRechner ${product_version}</name>
                    <path></path>
